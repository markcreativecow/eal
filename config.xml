<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="com.eal.app" version="1.0">
    <name>EAL Events App</name>
    <description></description>
    <author href="https://www.eal.org.uk" email="mnieminen@ontapcommunications.com">On Tap Communications</author>
    <!-- If you do not want any permissions to be added to your app, add the following tag to your config.xml; you will still have the INTERNET permission on your app, which PhoneGap requires. -->
    <preference name="permissions" value="none" />
    <!-- to enable individual permissions use the following examples -->
    <!--
   	<feature name="http://api.phonegap.com/1.0/battery"/>
   	<feature name="http://api.phonegap.com/1.0/camera"/>
   	<feature name="http://api.phonegap.com/1.0/contacts"/>
   	<feature name="http://api.phonegap.com/1.0/file"/>
   	<feature name="http://api.phonegap.com/1.0/geolocation"/>
   	<feature name="http://api.phonegap.com/1.0/media"/>
   	<feature name="http://api.phonegap.com/1.0/network"/>
   	<feature name="http://api.phonegap.com/1.0/notification"/>
    -->
    <preference name="detect-data-types" value="false"/>
    <preference name="fullscreen" value="true" />
    <preference name="ios-statusbarstyle" value="black-opaque"/>
    <preference name="orientation" value="portrait"/>
    <preference name="phonegap-version" value="3.2.0" />
    <preference name="prerendered-icon" value="true"/>
    <preference name="webviewbounce" value="false" />
	<preference name="target-device" value="handset" />
    <!-- Default - this needs to be in the root directory -->
    <icon src="icon.png"/>	
    <!-- iOS -->	
	<icon gap:platform="ios" height="57" src="img/icons/ios/icon-57.png" width="57" />
	<icon gap:platform="ios" height="72" src="img/icons/ios/icon-72.png" width="72" />
	<icon gap:platform="ios" height="76" src="img/icons/ios/icon-76.png" width="76" />
	<icon gap:platform="ios" height="114" src="img/icons/ios/icon-57@2x.png" width="114" />
	<icon gap:platform="ios" height="120" src="img/icons/ios/icon-120.png" width="120" />
	<icon gap:platform="ios" height="144" src="img/icons/ios/icon-72@2x.png" width="144" />
	<icon gap:platform="ios" height="152" src="img/icons/ios/icon-152.png" width="152" />
	<!-- iOS -->	
    <gap:splash gap:platform="ios" src="img/icons/ios/Default.png" width="320" height="480"/>
    <gap:splash gap:platform="ios" src="img/icons/ios/Default@2x.png" width="640" height="960"/>
    <gap:splash gap:platform="ios" src="img/icons/ios/Default-568h@2x.png" width="640" height="1136"/>
    <!-- Android -->
    <icon gap:platform="android" src="img/icons/android/icon-36-ldpi.png" gap:density="ldpi"/>
    <icon gap:platform="android" src="img/icons/android/icon-48-mdpi.png" gap:density="mdpi"/>
    <icon gap:platform="android" src="img/icons/android/icon-72-hdpi.png" gap:density="hdpi"/>
    <icon gap:platform="android" src="img/icons/android/icon-96-xhdpi.png" gap:density="xhdpi"/>
</widget>